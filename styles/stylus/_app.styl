a.brand
  float left

section
  padding 20px 0
  background greybg
  clear: both
  
  &#hero
    clearfix()
    padding 0
    height 100%
    background-attachment fixed
    background-image url(../medias/imgs/banner.jpg)
    background-position bottom center
    background-repeat no-repeat
    background-size cover
    // background url(../medias/imgs/visuel-main.jpg) center center no-repeat
    color white
    
    nav
      clearfix()
      padding 20px 0
      position fixed
      width 100%
      z-index: 10
      transition 500ms
      text-transform: uppercase
      font-weight: 700
      background: rgba(255, 255, 255, 0);
      
      a.nav-mobile
        color white
        font-weight: 300
        float: right
        padding 10px
        display: block
        cursor: pointer
        transition 500ms
        span.text
          display: inline-block
          text-indent: -9999px
      
      a.brand
        width 97px
        transition 500ms
        
        &.text
          width: auto
          text-transform: uppercase
          color white
          text-decoration: none
          padding-top 15px
          &:hover
            text-decoration: underline

      ul
        display: none
        float: right
        margin 10px 0 0 -10px
        li
          display inline-block
          padding 10px 5px
          transition 500ms
          &:last-child
            padding-right: 0
            a
              padding-right: 0
          a
            color white
            text-decoration: none
            display: block
            padding 5px
            &:hover
              text-decoration: underline
              
      &.min
        background: rgba(255, 255, 255, 0.8);
        padding 15px 0 10px 0
        a.nav-mobile
          padding 5px
          color dark
        a.brand
          width 60px
          &.text
            width: auto
            padding-top: 5px
            color dark
        ul
          li
            font-size: 0.9em
            padding 1px 5px 5px 5px
            a
              color dark
        
    .promesse
      clearfix()
      radius(0 0 60px)
      width auto
      margin 0px 20px
      margin-top 20%
      background rgba(0, 0, 0, 0.6)
      padding 60px
      text-align: center


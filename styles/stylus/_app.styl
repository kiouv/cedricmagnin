  .content
    background white
    padding 40px 0
    margin-top: 40px
    radius(0 0 60px)
    
    article
      font-size: 1.2em
      line-height: 1.6em
      max-width 640px
      margin 0 auto
      padding 0 20px
        
    .resume
      position relative
      padding 30px 20px 30px 100px
      border 1px solid light
      margin 20px auto 0
      max-width: 640px
      text-align: left
      radius(0 0 40px)
      span
        position absolute
        left 30px
        color light
        
  &#acteurs
    
    p.headline
      margin-bottom: 60px
      
  
  .iframe-wp
    width 600px
    margin 0 auto

          
  &#faq
    .faq
      h3
        padding-right: 20px
        &:hover
          cursor pointer
        &:focus
          outline 0
        .libelle
          position: relative
        .libelle:after
          position absolute
          bottom 8px
          content "+"
          display: inline-block
          margin-left 10px
          padding 0px 4px
          font-size: 0.5em
          line-height: 1.3em
          background: orange
          color white
          box-shadow: 2px 2px dark-orange
        &.ui-accordion-header-active
          .libelle:after
            content "-"
            padding 0px 5px
            background: light
            box-shadow: 2px 2px dark
            
      p
        color light
        margin: 0
        
        
  &#equipe
    clearfix()
    background: greybg
    .equipe
      margin-top: 20px
      li
        clearfix()
        clear both
        padding-top: 20px
        img
          float: left
          margin-right: 20px
          width 50%
        h4
          margin-top: 0
        p
          color light
          letter-spacing 1px
          

  &#contact
    background: white
    padding-bottom: 40px
    &.via
      background: greybg
    .contact
      clearfix()
      padding-top: 0
      
      > div
        text-align: center
        input
        textarea
          width 90%
        textarea
          height 180px
        
        p.tel
          font-size: 2.4em
          span
            font-size: 0.43em
            display: block
            padding-top: 15px
            font-style: italic
            color light
  

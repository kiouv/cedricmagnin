block vars

doctype
html( class="no-js", lang=lang )
  head
    meta( charset="utf-8" )
    meta( http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" )

    title= title

    //- Mobile
    meta( name="viewport" content=meta.viewport.join() )
    meta( name="format-detection" content="telephone=yes" )

